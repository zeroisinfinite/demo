    <script type="text/javascript">
        jQuery(document).ready(function(){
            var $ = jQuery;
            var tabHd=$('.help-con-hd span');
            var tabBd=$('.help-con-bd .help-tab');
              //选项卡切换
            tabHd.each(function(n){
                $(this).click(function(){
					tabHd.removeClass('on');
					$(this).addClass('on');
					tabBd.removeClass('on');
					tabBd.eq(n).addClass('on');
                });
            });

            //常见问题展开显示
            var titH3=$('.informations h3')
            var titH4=$('.info-more h4');
            show(titH3);
            show(titH4);

            function show(hd){
                hd.toggle(function(){
                    var bd=$(this).next();
                    bd.show(200);
                    $(this).addClass('open');
                },function(){
                    var bd=$(this).next();
                    bd.hide(200);
                    $(this).removeClass('open');
                });
            }
        })
    </script>
